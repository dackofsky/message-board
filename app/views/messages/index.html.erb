<div class="panel panel-default">
  <div class="panel-heading">
 メッセージ一覧
  </div>
 
 <div class="panel-body">
   <% @messages.each do |message| %>
   <span class="label label-info"><%= message.name %></span>
   <%= message.body %>
   <br>
   <% end %>
 </div>
</div>

<%= form_for(Message.new) do |f| %>
 <form class="form-horizontal">
    <div class="form-group">
      <div class="row">
      <div class="col-sm-1">名前:</div>
      <div class="col-sm-5"> <%= f.text_field :name %></div>
      <div class="col-sm-6"></div>
    </div>
  <br>
    <div class="row">
      <div class="col-sm-1">内容:</div>
      <div class="col-sm-7"><%= f.text_area :body, :size=>"60*10" %></div>
      <div class="col-sm-4"></div> 
    </div>
  <br>
    <div class="row">
      <div class="col-sm-1"></div>       
      <div class="col-sm-2"><%=f.submit class: "btn btn-sm btn-primary" %></div>
      <div class="col-sm-9"></div>
　  </div>
　</form> 
<% end %>
 
 
 

  

