<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<form class="form-horizontal">

  <div class="form-group">
    <div class="row">
      <div class="col-sm-1">名前:</div>
      <div class="col-sm-5"><%= f.text_field :name %></div>
      <div class="col-sm-6"></div>
    </div>
      <div class="row">
      <div class="col-sm-1">年齢:</div>
      <div class="col-sm-5"><%=f.select:age, options_for_select((0..100).map{|num|["#{num}歳",num]},selected:"20")%></div>
      <div class="col-sm-6"></div>
      </div>
      <div class="row">
      <div class="col-sm-1">内容:</div>
      <div class="col-sm-7"><%= f.text_area :body, :size => "60*10" %></div>
      <div class="col-sm-4"></div>
    </div> 
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-2"><%= f.submit class: "btn btn-sm btn-primary" %></div>
      <div class="col-sm-9"></div>
    </div>
  </div>

</form>
<% end %>


